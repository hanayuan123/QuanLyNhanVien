<Window x:Class="QuanLyNhanVien.Dangnhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyNhanVien"
        mc:Ignorable="d"
        Title="Dangnhap" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="White">
        <Border Width="350"
                Height="320"
                Background="White"
                CornerRadius="15"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                Padding="25"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>
                <TextBlock Text="LOGIN"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>
                <TextBlock Text="User"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <TextBox Name="txtUser"
                         Height="42"
                         Background="#EEEEEE"
                         BorderThickness="0"
                         Margin="0,0,0,15"
                         Padding="12"
                         FontSize="14"/>
                <TextBlock Text="Password"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <PasswordBox Name="txtPass"
                             Height="42"
                             Background="#EEEEEE"
                             BorderThickness="0"
                             Margin="0,0,0,25"
                             Padding="12"
                             FontSize="14"/>
                <Button Content="Login"
                        Height="45"
                        Background="#007BFF"
                        Foreground="White"
                        FontSize="15"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"/>

            </StackPanel>
        </Border>

    </Grid>
</Window>
