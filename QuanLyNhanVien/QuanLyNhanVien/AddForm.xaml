<UserControl x:Class="QuanLyNhanVien.AddForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:QuanLyNhanVien"
             mc:Ignorable="d">
    <Grid>
        <DockPanel>
            <GroupBox Margin="0" Header="Thêm nhân viên">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Mã Nhân Viên:" Grid.Column="0" Grid.Row="0"/>
                    <Label Content="Họ tên:" Grid.Column="0" Grid.Row="1"/>
                    <Label Content="Tuổi" Grid.Column="0" Grid.Row="2"/>
                    <Label Content="Giới tính" Grid.Column="0" Grid.Row="3"/>
                    <Label Content="Email:" Grid.Column="0" Grid.Row="4"/>
                    <Label Content="Số điện thoại:" Grid.Column="0" Grid.Row="5"/>
                    <TextBox x:Name="txtMaNV" Margin="5" Grid.Column="1" Grid.Row="0"/>
                    <TextBox x:Name="txtTen" Margin="5" Grid.Column="1" Grid.Row="1"/>
                    <TextBox x:Name="txtTuoi" Margin="5" Grid.Column="1" Grid.Row="2"/>
                    <StackPanel Margin="5" Grid.Column="1" Grid.Row="3" Orientation="Horizontal">
                        <RadioButton x:Name="rbNam" Content="Nam"/>
                        <RadioButton x:Name="rbNu" Content="Nữ"/>
                    </StackPanel>
                    <TextBox x:Name="txtEmail" Margin="5" Grid.Column="1" Grid.Row="4"/>
                    <TextBox x:Name="txtSDT" Margin="5" Grid.Column="1" Grid.Row="5"/>
                    <StackPanel Grid.Column="1" Grid.Row="6" Orientation="Horizontal" Margin="5">
                        <Button Content="Lưu" Width="100" Height="30" Margin="0" Background="#0078D7" Foreground="White" Click="BtnLuu_Click"/>
                        <Button Content="Xóa" Width="100" Height="30" Margin="100,0,0,0" Background="#0078D7" Foreground="White" Click="BtnXoa_Click"/>
                        <Button Content="Quay lại" Width="100" Height="30" Margin="10,0,0,0" Click="BtnQuayLai_Click"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </DockPanel>
    </Grid>
</UserControl>
