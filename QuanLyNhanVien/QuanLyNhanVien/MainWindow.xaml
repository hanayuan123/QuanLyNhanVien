<Window x:Class="QuanLyNhanVien.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyNhanVien"
        mc:Ignorable="d"
        Title="Quản Lý Nhân Viên" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="HeaderButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Background" Value="#EEEEEE"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="12,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#DDEBFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#BCD9FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#F3F4F6" Margin="14">
        <Border Background="White"
                CornerRadius="16"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="#F9FAFB"
                        CornerRadius="12"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        Padding="18,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Vị trí phòng ban" Style="{StaticResource HeaderButtonStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="BtnViTriPhongBan_Click"/>
                        <Button Grid.Column="1" Content="Quản lý tài khoản" Style="{StaticResource HeaderButtonStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="BtnQuanLyTaiKhoan_Click"/>
                        <Button Grid.Column="2" Content="Quản lý phòng ban" Style="{StaticResource HeaderButtonStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="BtnQuanLyPhongBan_Click"/>
                        <Button Grid.Column="3" Content="Quản lý nhân viên" Style="{StaticResource HeaderButtonStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="BtnQuanLyNhanVien_Click"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1"
                        Margin="0,14,0,0"
                        Background="White"
                        CornerRadius="12"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        Padding="8">
                    <ContentControl x:Name="MainContent"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
