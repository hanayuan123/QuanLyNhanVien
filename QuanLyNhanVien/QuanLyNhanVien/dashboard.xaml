<Window x:Class="QuanLyNhanVien.dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="450" Width="800">

    <Grid>
        <DockPanel>

            <Menu DockPanel.Dock="Top"/>

            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem Content="Trạng thái sẵn sàng"/>
            </StatusBar>

            <Grid Margin="8">
                <GroupBox Header="Thông tin nhân viên" Padding="6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="240"/>
                        </Grid.ColumnDefinitions>

                        <!-- BẢNG CHỈ TỚI SDT -->
                        <DataGrid x:Name="dgNhanVien"
                                  Grid.Column="0"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  RowHeaderWidth="0"
                                  MinRowHeight="34"
                                  ColumnWidth="*"

                                  GridLinesVisibility="All"
                                  HorizontalGridLinesBrush="#FFD9D9D9"
                                  VerticalGridLinesBrush="#FFD9D9D9"
                                  BorderBrush="#FFCFCFCF"
                                  BorderThickness="1"

                                  AlternationCount="2"
                                  AlternatingRowBackground="#FFFAFAFA">

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="Padding" Value="6,4"/>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="BorderBrush" Value="#FFD9D9D9"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="Background" Value="#FFF4F4F4"/>
                                    <Setter Property="BorderBrush" Value="#FFD9D9D9"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    <Setter Property="Padding" Value="6,4"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="mã nhân viên" Binding="{Binding MaNV}" Width="*"/>
                                <DataGridTextColumn Header="tên"         Binding="{Binding Ten}"  Width="*"/>
                                <DataGridTextColumn Header="tuổi"        Binding="{Binding Tuoi}" Width="*"/>
                                <DataGridTextColumn Header="giới tính"   Binding="{Binding GioiTinh}" Width="*"/>
                                <DataGridTextColumn Header="email"       Binding="{Binding Email}" Width="*"/>
                                <DataGridTextColumn Header="sdt"         Binding="{Binding Sdt}"   Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- 3 NÚT LUÔN HIỆN (KHÔNG PHỤ THUỘC DỮ LIỆU) -->
                        <Border Grid.Column="1"
                                Margin="20,0,0,0"
                                Background="Transparent">

                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,60,0,0">

                                <Button Content="Thêm"
                                        Width="160" Height="45"
                                        Margin="0,0,0,18"
                                        Click="BtnThem_Click"/>

                                <Button Content="Sửa"
                                        Width="160" Height="45"
                                        Margin="0,0,0,18"
                                        Click="BtnSua_Click"/>

                                <Button Content="Xóa"
                                        Width="160" Height="45"
                                        Click="BtnXoa_Click"/>

                            </StackPanel>
                        </Border>

                    </Grid>
                </GroupBox>
            </Grid>

        </DockPanel>
    </Grid>
</Window>
