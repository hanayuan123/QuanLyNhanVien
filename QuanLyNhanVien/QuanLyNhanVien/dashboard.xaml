<Window x:Class="QuanLyNhanVien.dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="560" Width="980" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="SoftBlueButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="170"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Background" Value="#5AA9FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BtnBorder" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#79BBFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#4A9AF5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#F3F4F6" Margin="10">
        <Border Background="White" CornerRadius="14" BorderBrush="#DDDDDD" BorderThickness="1" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border x:Name="pnlDanhSach" Grid.Row="0" Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="10" Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>

                        <DataGrid x:Name="dgNhanVien"
                                  Grid.Column="0"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  RowHeaderWidth="0"
                                  ColumnWidth="*"
                                  Margin="0,0,12,0"
                                  BorderBrush="#E5E7EB"
                                  BorderThickness="1"
                                  GridLinesVisibility="All"
                                  HorizontalGridLinesBrush="#FFD6DEE8"
                                  VerticalGridLinesBrush="#FFD6DEE8"
                                  FontSize="14"
                                  RowHeight="34"
                                  ColumnHeaderHeight="38"
                                  AlternationCount="2"
                                  AlternatingRowBackground="#FFFAFAFA">

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="Padding" Value="6,4"/>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="BorderBrush" Value="#FFD6DEE8"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Foreground" Value="#1F2937"/>
                                    <Setter Property="Background" Value="#F1F5F9"/>
                                    <Setter Property="Padding" Value="8,4"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="BorderBrush" Value="#FFD6DEE8"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Mã nhân viên" Binding="{Binding MaNV}" Width="*"/>
                                <DataGridTextColumn Header="Tên" Binding="{Binding Ten}" Width="*"/>
                                <DataGridTextColumn Header="Tuổi" Binding="{Binding Tuoi}" Width="*"/>
                                <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}" Width="*"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                                <DataGridTextColumn Header="SDT" Binding="{Binding SDT}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="0,16,0,0">
                            <Button Content="Thêm" Style="{StaticResource SoftBlueButtonStyle}" Click="BtnThem_Click"/>
                            <Button Content="Sửa" Style="{StaticResource SoftBlueButtonStyle}" Click="BtnSua_Click"/>
                            <Button Content="Xóa" Style="{StaticResource SoftBlueButtonStyle}" Margin="0" Click="BtnXoa_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <StatusBar Grid.Row="1" Margin="0,10,0,0" Background="Transparent" BorderThickness="0">
                    <StatusBarItem Content="Trạng thái sẵn sàng"/>
                </StatusBar>

                <ContentControl x:Name="contentArea" Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Grid>
</Window>
