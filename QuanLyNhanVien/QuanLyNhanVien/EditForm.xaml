<Window x:Class="QuanLyNhanVien.EditForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyNhanVien"
        mc:Ignorable="d"
        Title="Quản lý nhân viên"  Height="450" Width="800">
    <Grid>
        <DockPanel>
            <GroupBox Margin="0" Header="Chỉnh sửa">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Mã Nhân Viên:" Grid.Column="0" Grid.Row="0"/>
                    <Label Content="Họ tên:" Grid.Column="0" Grid.Row="1"/>
                    <Label Content="Tuổi" Grid.Column="0" Grid.Row="2"/>
                    <Label Content="Giới tính" Grid.Column="0" Grid.Row="3"/>
                    <Label Content="Email:" Grid.Column="0" Grid.Row="4"/>
                    <Label Content="Số điện thoại:" Grid.Column="0" Grid.Row="5"/>
                    <TextBox Margin="5" Grid.Column="1" Grid.Row="0"/>
                    <TextBox Margin="5" Grid.Column="1" Grid.Row="1"/>
                    <TextBox Margin="5" Grid.Column="1" Grid.Row="2"/>
                    <StackPanel Margin="5" Grid.Column="1" Grid.Row="3" Orientation="Horizontal">
                        <RadioButton Content="Nam"/>
                        <RadioButton Content="Nữ"/>
                    </StackPanel>
                    <TextBox Margin="5" Grid.Column="1" Grid.Row="4"/>
                    <TextBox Margin="5" Grid.Column="1" Grid.Row="5"/>
                    <StackPanel Grid.Column="1" Grid.Row="6" Orientation="Horizontal" Margin="5">
                        <Button Content="Lưu" Width="100" Height="30" Margin="0" Background="#0078D7" Foreground="White" />
                        <Button Content="Xóa" Width="100" Height="30" Margin="100,0,0,0" Background="#0078D7" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </DockPanel>
    </Grid>
</Window>
