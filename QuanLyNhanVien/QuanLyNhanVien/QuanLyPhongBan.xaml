<Window x:Class="QuanLyNhanVien.QuanLyPhongBan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Phòng Ban" Height="500" Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Mã phòng ban:" Grid.Row="0"/>
        <TextBox x:Name="txtMaPB" Grid.Row="0" Margin="100,2,421,3"/>

        <TextBlock Text="Tên phòng ban:" Grid.Row="1"/>
        <TextBox x:Name="txtTenPB" Grid.Row="1" Margin="100,2,421,3"/>

        <TextBlock Text="Mô tả:" Grid.Row="2"/>
        <TextBox x:Name="txtMoTa" Grid.Row="2" Margin="100,1,421,1"/>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,10">
            <Button Content="Thêm" Width="80" Margin="5" Click="btnThem_Click"/>
            <Button Content="Sửa" Width="80" Margin="5" Click="btnSua_Click"/>
            <Button Content="Xóa" Width="80" Margin="5" Click="btnXoa_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgPhongBan" Grid.Row="4" Margin="0,10"
                  AutoGenerateColumns="True"
                  SelectionChanged="dgPhongBan_SelectionChanged"/>
    </Grid>
</Window>