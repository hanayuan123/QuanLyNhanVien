<Window x:Class="QuanLyNhanVien.QuanLyTaiKhoan_Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyNhanVien"
        mc:Ignorable="d"
        Title="Quản Lý Tài Khoản" Height="550" Width="980" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Background" Value="#5AA9FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BtnBorder" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#79BBFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#4A9AF5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#F3F4F6" Margin="12">
        <Border Background="White" CornerRadius="14" BorderBrush="#DDDDDD" BorderThickness="1" Padding="14">
            <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="AccountDataGrid"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Grid.Column="0"
                  Margin="0,0,12,0"
                  BorderBrush="#E5E7EB"
                  BorderThickness="1"
                  FontSize="14"
                  RowHeight="34"
                  ColumnHeaderHeight="38">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
                    <DataGridTextColumn Header="Tên nhân viên" Binding="{Binding TenNhanVien}" Width="*"/>
                </DataGrid.Columns>

            </DataGrid>

            <Border Grid.Column="1"
                Background="#F9FAFB"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="10"
                Padding="10">

                <ContentControl x:Name="FormContent"/>

            </Border>

        </Grid>

        <!-- Nút chức năng bên dưới -->
        <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Right"
                Grid.Row="1"
                Margin="0,10,0,0">

            <Button Content="Thêm"
                Width="100"
                Click="Add_Click"/>

            <Button Content="Sửa"
                Width="100"
                Click="Edit_Click"/>

            <Button Content="Xóa"
                Width="100"
                Click="Delete_Click"/>

        </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
